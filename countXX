int countXX(String str) {

	/* Count the number of "xx" in the given string. We'll say
	that overlapping is allowed, so "xxx" contains 2 "xx".
	*/

	int count = 0;
	String strXX = "";

	for (int i = 0; i < str.length() - 1; i++) {
		strXX = str.substring(i, i + 2);
		if (strXX.equals("xx")) {
			count++;
		}
	}

	return count;

}

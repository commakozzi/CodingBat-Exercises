public String stringX(String str) {

	/*
	Given a string, return a version where
	all the "x" have been removed. Except
	an "x" at the very start or end
	should not be removed.
	*/

	String firstLetter = "";
	String lastLetter = "";
	String nextLetter = "";
	String newString = "";

	if (str.length() <= 2) newString = str;

	// Set first and last letter to x if x
	if (str.length() > 2 && str.substring(0, 1).equals("x")) firstLetter = "x";
	if (str.length() > 2 && str.substring(str.length() - 1, str.length()).equals("x")) lastLetter = "x";

	// Collect all strings not x and assign to nextLetter
	for (int i = 0; i < str.length(); i++) {
		if (!str.substring(i, i + 1).equals("x")) {
			nextLetter = str.substring(i, i + 1);
			newString = newString + nextLetter;
		}
	}

	return firstLetter + newString + lastLetter;

}

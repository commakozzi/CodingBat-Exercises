public String stringSplosion(String str) {

	/*
	Given a non-empty string like "Code"
	return a string like "CCoCodCode".
	*/

	String newString = "";
	String nextLetter = "";

	for (int i = 0; i < str.length(); i++) {
		nextLetter = str.substring(0, i + 1);
		newString = newString + nextLetter;
	}

	return newString;

}
